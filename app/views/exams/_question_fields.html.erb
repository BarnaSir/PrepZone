<div class="nested-fields">
  <%= f.label :question_content, "Question" %>
  <%= f.text_area :question_content, :rows => 2, cols: 10 %>
   <%= link_to_remove_association "remove", f %>
  <%= f.simple_fields_for :answers do |answer| %>
    <%= render 'answer_fields', :f => answer %>
  <% end %>
  <p><%= link_to_add_association "Add Answer", f, :answers %></p>
</div>

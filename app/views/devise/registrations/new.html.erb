<style type="text/css">
.btn-outlined{
  
}
.avatar-button{
  padding:0;
  margin-bottom: 0;
  color: #428bca;
  background-color: transparent;
  display: block;
  width: 100%;
  border: 1px solid #428bca;
  font-size: 18px;
  cursor: pointer;
}
  .panel {
    margin-bottom: 20px;
    background-color: #fff;
    border: 1px solid transparent;
    border-radius: 4px;
    -webkit-box-shadow: 0 1px 1px rgba(0,0,0,.05);
    box-shadow: 0 1px 1px rgba(0,0,0,.05);
  }
}
}
} 

.panel-danger {
    border-color: #ebccd1;
}
.col-xs-12 {
    width: 100%;
    float:left;
}

.panel-danger>.panel-heading {
    color: #a94442;
    background-color: #f2dede;
    border-color: #ebccd1;
}
.panel-heading {
    padding: 10px 15px;
    border-bottom: 1px solid transparent;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
}


  .mdl-textfield--floating-label.is-invalid .mdl-textfield__label {
    color: rgba(0,0,0,.26) !important;
    font-size: 16px !important;
}

.mdl-textfield.is-invalid .mdl-textfield__input {
    border-color: rgba(0,0,0,.12) !important;
}
li{
  list-style: none;
}
ul{
  padding-left: 0;
  margin-bottom: 0;
  margin-top: 0;
}
.mdl-card{
  width: 338px !important;
}
.mdl-textfield{
  width:250px !important;
}
</style>
<div class="whole-page-div">
  <div style="background: white;">
    <center>
        <div class="square-card mdl-card mdl-shadow--2dp">
            <div class="row">
              <% if @user.errors.any? %>
              <div class="col-xs-12">
                <div>
                  <div class="panel panel-danger" style="margin:0">
                    <div style="padding:0;" class="panel-heading">
                      <div class="panel-body" style="padding:0;">
                        <ul>
                          <% @user.errors.full_messages.each do |msg|%>
                          <li><%#= msg %></li>
                          <% end %>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
          <% end %>
          </div>
            <div class="mdl-card__title" style="padding-bottom:0;padding-top: 5px;">
                  <h4 style="margin: 0"><%= t('.sign_in', default: 'Sign up') %></h4>
            </div>
            <div class="mdl-card__supporting-text" style="padding-top: 0">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form',:multipart => true }) do |f| %>          
          <%= render 'shared/errors', object: @user %>

          <!-- <div> -->
            <%#= f.label :choose_avatar_or_DP,for:"avatar_upload", class:"avatar-button" %>
            <%# <%= f.file_field :avatar, id:"avatar_upload", style:"display:none;"%>
          <!-- </div> -->

          <!-- <span class="mdl&#45;textfield mdl&#45;js&#45;textfield mdl&#45;textfield&#45;&#45;floating&#45;label"> -->
            <%#= f.label :username, class: "mdl-textfield__label" %>
            <%#= f.text_field :username, required: true, class: "mdl-textfield__input" %>
          <!-- </span> -->

          <span class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.label :email, class: "mdl-textfield__label" %>
            <%= f.email_field :email, required: true,class: "mdl-textfield__input" %>
          </span>

          <span class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :password, class: "mdl-textfield__label" %>
              <%= f.password_field :password, autocomplete: 'off',required: true, class: "mdl-textfield__input" %>
          </span>

          <span class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :password_confirmation,required: true, class: "mdl-textfield__label" %>
              <%= f.password_field :password_confirmation, required: true, autocomplete: 'off', class: "mdl-textfield__input" %>
          </span>

          <%= f.submit  t('.sign_up', default: 'Sign Up'), class: 'mdl-button mdl-button--accent mdl-button--raised mdl-js-ripple-effect fix-margin' %>
					<br />
					<br />
        <% end %>
        <%= render 'devise/shared/links' %>
  </div>
        </div>
    </center>
</div>
</div>



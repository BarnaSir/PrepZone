<style type="text/css">
  .fix-margin{
    margin: 15px;
  }
</style>
<div class="whole-page-div">
<div style="background: white;">
    <center>
        <div class="square-card mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title">
                  <h4 style="margin: 0"><%= t('.sign_in', default: 'Sign in') %></h4>
            </div>
						<%= render 'devise/shared/flash_messages' %>
            <div class="mdl-card__supporting-text" style="padding-top: 0">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
	<%= devise_error_messages!  %>
          <%= render 'shared/errors', object: resource %>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.label :email, class: "mdl-textfield__label" %>
            <%= f.email_field :email, class: "mdl-textfield__input" %>
          </div><br>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :password, class: "mdl-textfield__label" %>
              <%= f.password_field :password, autocomplete: 'off', class: "mdl-textfield__input" %>
          </div><br>

          <% if devise_mapping.rememberable? %>
              <%= f.label :remember_me, class: "mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" do %>
              <%= f.check_box :remember_me, class: "mdl-checkbox__input" %> <p><%= t('.remember_me', default: 'Remember me') %></p>
              <% end %>
          <% end %><br>
          <%= f.submit  t('.sign_in', default: 'Sign in'), class: 'mdl-button mdl-button--accent mdl-button--raised mdl-js-ripple-effect fix-margin' %>
        <% end %>
        <%= render 'devise/shared/links' %>
  </div>
        </div>
    </center>
</div>
</div>
